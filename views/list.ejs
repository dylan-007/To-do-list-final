<%- include("header") -%>
<body>
  <div class="box" id="heading">
    <h1><%=listTitle%></h1>
  </div>

  <div class="box">
    <ul>
      <% for(var i=0;i<newListItem.length;i++){ %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%=newListItem[i]._id%>" onChange="this.form.submit()">
            <p> <%=newListItem[i].name%> </p>
          </div>
          <input type="hidden" name="listName" value="<%=listTitle%>">
        </form>
      <% } %>

    </ul>

    <form class="item" action="/" method="post" type="text">
      <input type="text" name="newItem" autocomplete="off" placeholder="New Item">
      <button type="submit" name ="list" value="<%=listTitle%>">+</button>
    </form>

  </div>
</body>
<%- include("footer") -%>
